<header>
    <div class="container teal darken-2 center">
        <div class="row">
            <nav class="teal darken-2">
                <div class="col s12">
                    <div class="nav-wrapper container">
                        <ul class="left side nav">
                            <li><a href="/">Home</a></li>
                            <li><a href="/dashboard">Dashboard</a></li>
                        </ul>
                        <ul class="right side-nav">
                            <li id="logout-btn"><a>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
</header>

<div class="container">
    <div class="col s12">
        <div class="card-panel grey lighten-5 z-depth-1">
            <h4 class="teal-text text-darken-2" id='post-title'> {{post.title}}</h4>
            <input id='new-title' type='text' placeholder="{{post.title}}" class="form-control" style="display: none;">
            <p id="post-body">{{post.body}}</p>
            <textarea id='new-body' placeholder="{{post.body}}" cols="30" rows="10" class="form-control"
                style="display: none;"></textarea>
            <p>Posted by {{post.user.username}} on {{date}}</p>
            {{!-- put in div if LoggedIn --}}
            <div>
                <button class="btn btn-primary" id="delete-btn">Delete</button>
                <button class="btn btn-primary" id="edit-btn">Edit</button>
                <button class="btn btn-primary" id="save-btn" style='visibility: hidden'>Save</button>
            </div>
        </div>
    </div>
</div>

