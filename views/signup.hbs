<div class="container center">
  <div class="row">
    <div class="col s8 center">
      <div class="card-panel center z-depth-5">
        <h4 class="center teal-text text-darken-2"> Sign-up</h4>
        <form id="sign-up" class="row">
          <div class="form-group">
            <label for="username">Username <span></span></label>
            <input class="validate" id="username" placeholder="Enter username">
          </div>
          <div class="form-group">
            <label for="password">Password <span></span></label>
            <input type="password" id="password" placeholder="Enter Password">
          </div>
          <button class="btn waves-effect waves-light center" type="submit" name="action">Sign Up
            <i class="fa fa-sign-in right"></i>
          </button>
        </form>
        <div class="row">
          <div class="col-md-8">
            Already have an account? Sign-in <a href="/login">here</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src='/js/signup.js'></script>