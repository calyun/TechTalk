<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <form>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Title</label>
            <input type="text" id="post-title" placeholder="Title" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Content</label>
            <textarea id="post-body" placeholder="Content ..." cols="30" rows="10" class="form-control"></textarea>
          </div>
        </div>
        <div class="form-group my-4 text-center">
          <button class="btn btn-primary" id='create-post-btn'>Post</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='/js/create-post.js'></script>