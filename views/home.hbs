<nav class="teal darken-2" role="navigation">
  <div class="nav-wrapper container">
    <ul class="left side-nav">
      {{#if loggedIn}}
      <li><a href="dashboard">Dashboard</a></li>
      {{/if }}
    </ul>
    <ul class="right side-nav">
      {{#if loggedIn}}
      <li id="logout-btn"><a>Logout</a></li>
      {{/if }}
      {{#unless loggedIn}}
      <li><a href="login">Log In</a></li>
      <li><a href="signup">Sign-up</a></li>
      {{/unless}}
    </ul>
  </div>
</nav>

<div class="col s12 center-align no-pad">
  <h1 class="header  teal-text text-darken-2">Tech Talk</h1>
  <h4 class="header col s12 light teal-text text">Recent Posts:</h5>
</div>

<div class="container">
  <div class="col s12">
    <div class="card-panel grey lighten-5 z-depth-1">
      {{!-- <h4 class="teal-text text-darken-2 center"> Recent Posts</h4> --}}
      {{#each posts}}
      <a href="/blogRoutes/{{post_id}}">
        <div class="card-panel grey lighten-5 z-depth-1">
          <h6 class="teal-text"> {{title}}</h6>
          <p>{{body}}</p>
          <p>Posted by {{user.username}} on {{date}}</p>
        </div>
      </a>
      {{/each }}
    </div>
  </div>
</div>

<footer class="page-footer teal darken-2">
</footer>

<script src="../public/css/js/create-post.js"></script>
{{#if loggedIn}}
<script src="/js/logout.js"></script>
{{/if}}