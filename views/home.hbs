<header>
  <div class="container teal darken-2 center">
    <div class="row">
      <nav class="teal darken-2">
        <div class="col s12">
          <div class="nav-wrapper container">
            <ul class="right side-nav">
              {{#if LoggedIn}}
              <li id="logout-btn"><a>Logout</a></li>
              <li><a href="dashboard"></a></li>
              {{else}}
              <li><a href="login">Log In</a></li>
              <li><a href="signup">Sign-up</a></li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
      <div class="col s12 center-align no-pad">
        <h1 class="header  white-text text-darken-2">Tech Talk</h1>
        <h4 class="header col s12 light white-text text">Your online tech community!</h5>
      </div>
    </div>
</header>

<div class="container">
  <div class="col s12">
    <div class="card-panel grey lighten-5 ">
      <div>{{>posts}}</div>
    </div>
  </div>
</div>

<div class="container">
  <div class="col s12">
    <div class="card-panel grey lighten-5 z-depth-1">
      <h4 class="teal-text text-darken-2 center"> Recent Posts</h4>
      {{#each posts}}
        <a href="/blogRoutes/{{post_id}}">
         <div class="card-panel grey lighten-5 z-depth-1">
          <h6 class="teal-text"> {{title}}</h6>
          <p>{{body}}</p>
          <p>Posted by: {{user.username}}</p>
          </div>
        </a>
      {{/each }}
    </div>
  </div>
</div>

<footer class="container page-footer teal darken-2">
  <div class="row"></div>
</footer>

<script src="../public/css/js/create-post.js"></script>
<script src="/js/logout.js"></script>